{
  "compilerOptions": {
    "module": "commonjs",
    "baseUrl": "./",
    "outDir": "build",
    "target": "es6",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "lib": ["es6"],
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": ["./node_modules/@types", "./types"], // Add "./types" to include custom declaration files
    "types": ["node", "express"]
  },
  "include": ["**.ts"],
  "exclude": ["./frontend", "node_modules"],
  "files":["types.d.ts"]
}
