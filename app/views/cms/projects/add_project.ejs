<form action="/api/projects" method="POST" enctype="multipart/form-data">
  <div class="form-group">
    <label class="col-form-label">Project Name</label>
    <input type="text" name="name" class="form-control" required />
  </div>
  <div class="form-group">
    <label class="col-form-label">Designer Name</label>
    <input type="text" name="designerName" class="form-control" required />
  </div>
  <div class="form-group">
    <label class="col-form-label">Showcase</label>
    <input type="file" class="form-control" name="gallery" multiple required />
  </div>
  <div class="form-group">
    <label class="col-form-label">Project Link</label>
    <input type="text" class="form-control" name="url" required />
  </div>
  <div class="form-group">
    <label class="col-form-label">Thumbnail</label>
    <input type="file" class="form-control" name="image" required />
  </div>
  <div class="form-group">
    <label>Description</label>
    <textarea id="ckeditor" name="description" class="form-control"></textarea>
  </div>
  <div class="modal-footer">
    <button type="submit" class="btn btn-primary">Add</button>
  </div>
</form>
