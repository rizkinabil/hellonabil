<div class="tab-pane fade show active" id="edit-item" role="tabpanel" aria-labelledby="profile-tab">
  <div class="card shadow mb-4 mt-2">
    <div class="card-body">
      <form action="/api/projects/<%= showcaseData.id %>?_method=PUT" method="POST" enctype="multipart/form-data">
        <div class="form-group">
          <label>Project Name</label>
          <input type="text" class="form-control" name="name" value="<%= showcaseData.name %>" required />
        </div>
        <div class="form-group">
          <label>Designer Name</label>
          <input
            type="text"
            class="form-control"
            name="designerName"
            value="<%= showcaseData.designerName %>"
            required
          />
        </div>
        <div class="form-group">
          <label class="col-form-label">Showcase</label>
          <input type="file" class="form-control" name="gallery" multiple />
        </div>
        <div class="form-group">
          <label>Project Link</label>
          <input type="text" class="form-control" name="url" value="<%= showcaseData.url %>" />
        </div>
        <div class="form-group">
          <label class="col-form-label">Thumbnail</label>
          <input type="file" class="form-control" name="image" />
        </div>
        <div class="form-group">
          <label>Description</label>
          <textarea id="ckeditor" name="description" class="form-control">
            <%= showcaseData.description %>
          </textarea>
        </div>
        <button type="submit" class="btn btn-primary">Save</button>
      </form>
    </div>
  </div>
</div>
